<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/estrella_full</item>
        <item name="android:minHeight">30sp</item>
        <item name="android:maxHeight">30sp</item>
    </style>



    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!--checbosx swich -->

    <style name="MySwitch" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorVerdeAzulado</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorBlanco</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorBlanco</item>
    </style>
    <!-- fin checbosx swich -->

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorVerdeAzulado</item>
    </style>


    <style name="LightTabWidget" parent="@android:style/Widget.TabWidget">
    <item name="android:textColor">@color/colorTransparente</item>
</style>

    <!--Tema de la Activity-->
    <style name="ThemeSegundaActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/verdeLima</item> <!--Color naranja-->
    </style>

    <style name="EditTextFondoBlanco" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:background">@drawable/editext_redondeado_blanco</item>
    </style>


</resources>

