<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/verdeLima">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/verdeLima">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/numero_orden"
            android:text="BÃšSQUEDA DETALLADA"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="@color/verdeLima"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados para:"
            android:gravity="center"
            android:textColor="@color/color_blanco"
            android:textSize="@dimen/size_texto_simple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:id="@+id/fecha_historico"
            android:textColor="@color/color_blanco"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:background="@drawable/bkg"
            android:padding="2sp"
            android:layout_marginLeft="-6sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empresas:"
            android:id="@+id/empresa_historico"
            android:textColor="@color/color_blanco"
            android:layout_weight="1"
            android:background="@drawable/bkg"
            android:padding="2sp"
            android:layout_marginRight="-6sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv"
            android:divider="@color/colorTransparente">
        </ListView>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/progressBar3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="117dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/sindatos"
            android:layout_height="wrap_content"
            android:text="Sin Datos."
            android:layout_marginTop="40sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_blanco"
            android:visibility="invisible"/>

    </RelativeLayout>
</LinearLayout>
