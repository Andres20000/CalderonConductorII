<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/verdeLima">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/verdeLima">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/numero_orden"
            android:text="NUEVO DESTINO"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="@color/verdeLima"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/post_border_style"
        android:layout_margin="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleciona una ciudad de destino y escriba la dirección"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:text="_"
                android:background="@color/color_gris_linea"
                android:layout_centerHorizontal="true" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/post_border_style"
                   android:layout_margin="2sp"
                   android:padding="5sp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Selecione el nuevo destino:"
                       android:id="@+id/textView17" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Ciudad"
                       android:id="@+id/textView18"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentEnd="true"
                       android:onClick="puebos"
                       android:clickable="true"/>
               </RelativeLayout>
           </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:text="_"
                android:background="@color/color_gris_linea"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/nuevaDiredcion"
                android:hint="Dirección de destino"
                android:layout_gravity="top"
                android:gravity="top"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5sp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok, guardar cambios"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:background="@color/colorCafe"
            android:layout_marginTop="5sp"
            android:padding="10sp"
            android:onClick="enviarCiudad"
            android:inputType="numberSigned"
            android:textColor="@color/color_blanco"/>



    </LinearLayout>
</LinearLayout>
