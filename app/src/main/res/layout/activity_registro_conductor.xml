<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/verdeLima"
    android:paddingTop="@dimen/espacio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pre-Inscrición"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:text="1"
                    android:id="@+id/uno"
                    android:textColor="@color/colorNegro"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/circulo_blanco_style"
                    android:layout_margin="5sp"
                    />

                <Button
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:text="2"
                    android:id="@+id/dos"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/circulo_verde_oscuro_post_border_style"
                    android:layout_margin="5sp"
                    />

                <Button
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:text="3"
                    android:id="@+id/tres"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/circulo_verde_oscuro_post_border_style"
                    android:layout_margin="5sp"
                    />

                <Button
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:text="4"
                    android:id="@+id/cuatro"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/circulo_verde_oscuro_post_border_style"
                    android:layout_margin="5sp" />

                <Button
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:text="5"
                    android:id="@+id/cinco"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/circulo_verde_oscuro_post_border_style"
                    android:layout_margin="5sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos del propietario"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5.26">

            <!--inicio editex propietario-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_style"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/txt_propietario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:background="@drawable/edittext_style"
                        android:text=""
                        android:hint="Propietario"
                        android:editable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:enabled="true"
                        android:textColor="@color/colorNegro"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:padding="5sp"
                        android:gravity="left"
                        android:layout_gravity="center">
                    </EditText>

                    <CheckedTextView
                        android:background="@color/colorBlanco"
                        android:id="@+id/check_propietario"
                        android:layout_width="wrap_content"
                        android:layout_height="43sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:checkMark="?android:attr/textCheckMark"
                        android:gravity="right"
                        android:clickable="false"
                        android:inputType="textAutoCorrect"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:layout_marginRight="5sp"
                        android:layout_toRightOf="@+id/txt_propietario"
                        android:layout_toEndOf="@+id/txt_propietario"
                        />


                </RelativeLayout>
            </LinearLayout>

            <!--fin editex propietario-->

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacio" />

            <!--inicio editex empresa-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_style"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/txt_empresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:background="@drawable/edittext_style"
                        android:text=""
                        android:hint="Empresa"
                        android:editable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:enabled="true"
                        android:textColor="@color/colorNegro"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:padding="5sp"
                        android:gravity="left"
                        android:layout_gravity="center">
                    </EditText>

                    <CheckedTextView
                        android:background="@color/colorBlanco"
                        android:id="@+id/check_empresa"
                        android:layout_width="wrap_content"
                        android:layout_height="43sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:checkMark="?android:attr/textCheckMark"
                        android:gravity="right"
                        android:clickable="false"
                        android:inputType="textAutoCorrect"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:layout_marginRight="5sp"
                        android:layout_toRightOf="@+id/txt_empresa"
                        android:layout_toEndOf="@+id/txt_empresa" />


                </RelativeLayout>
            </LinearLayout>


            <!--fin editex empresa-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_nom_empresa"
                android:visibility="gone">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/espacio" />

                <EditText
                    android:id="@+id/txt_nom_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:background="@drawable/edittext_style"
                    android:text=""
                    android:inputType="textAutoCorrect"
                    android:hint="Nombre de la Empresa"
                    android:textColor="@color/colorNegro"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:padding="5sp">
                </EditText>
            </LinearLayout>


            <!--nombre y apellido-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_nom_apelido"
                android:visibility="gone">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/espacio" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_nombre_propietario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:background="@drawable/edittext_style"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:hint="Nombre"
                        android:textColor="@color/colorNegro"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:padding="5sp"
                        android:layout_weight="1">
                    </EditText>

                    <Space
                        android:layout_width="4dp"
                        android:layout_height="@dimen/espacio" />
                    <EditText
                        android:id="@+id/txt_apellido_propietario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:background="@drawable/edittext_style"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:hint="Apellido"
                        android:textColor="@color/colorNegro"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:padding="5sp"
                        android:layout_weight="1">
                    </EditText>
                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacio" />

            <EditText
                android:id="@+id/txt_nit_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:background="@drawable/edittext_style"
                android:text=""
                android:hint="NIT o C.C."
                android:textColor="@color/colorNegro"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="5sp"
                android:inputType="number|textAutoComplete">
            </EditText>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacio" />

            <EditText
                android:id="@+id/txt_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:background="@drawable/edittext_style"
                android:text=""
                android:hint="Dirección"
                android:textColor="@color/colorNegro"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="5sp"
                android:inputType="textAutoCorrect">
            </EditText>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacio" />

            <EditText
                android:id="@+id/txt_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:background="@drawable/edittext_style"
                android:text=""
                android:hint="Teléfono"
                android:textColor="@color/colorNegro"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="5sp"
                android:inputType="number"
                android:maxLength="10">
            </EditText>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/paddingBottom" />

        </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_continuar"
        android:textColor="@color/colorBlanco"
        android:textStyle="bold"
        android:background="@color/colorCafe"
        android:layout_alignParentBottom="true"
        android:layout_margin="15sp"
        android:padding="7sp"
        android:onClick="continuar"/>



</RelativeLayout>
