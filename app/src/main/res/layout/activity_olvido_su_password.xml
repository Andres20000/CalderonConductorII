<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color_blanco"
    tools:context=".OlvidoSuPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/corrreo"
        android:hint="correo"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:gravity="left"
        android:text=""
        android:maxLines="1"
        android:textSize="@dimen/size_texto"
        android:textColorHint="@color/color_blanco"
        android:textColor="@color/color_blanco"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:background="@color/verdeLima"
        android:padding="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/paddingBottom"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Enviar Contraseña"
        android:background="@color/colorCafe"
        android:textColor="@color/color_blanco"
        android:gravity="center"
        android:textSize="@dimen/size_texto"
        android:layout_below="@+id/corrreo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="resetPassword"/>

    <ImageView
        android:layout_width="160sp"
        android:layout_height="1200sp"
        android:id="@+id/imageView"
        android:src="@drawable/logo_i5"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Será enviada a su correo electrónico"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/verdeLimaTexto"
        android:layout_above="@+id/corrreo"
        android:layout_centerHorizontal="true"
        android:paddingTop="5sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crearorecuperarcontra"
        android:textSize="23sp"
        android:gravity="center"
        android:textColor="@color/verdeLimaTexto"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:text="Cancelar"
        android:background="@color/colorCafe"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_blanco"
        android:onClick="atras"/>

    <ProgressBar
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/progressBar4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
