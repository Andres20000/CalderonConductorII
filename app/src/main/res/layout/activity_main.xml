<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/color_blanco">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/linearLayout">

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/verdeLimaTexto"
        android:textStyle="bold"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="help"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:id="@+id/correo"
        android:inputType="textWebEmailAddress"
        android:maxLength="50"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/color_blanco"
        android:textColor="@color/color_blanco"
        android:background="@color/verdeLima"
        android:textSize="@dimen/size_texto"
        android:padding="10sp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/contrasena"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contrasena"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:maxLength="50"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="@dimen/size_texto"
        android:textColorHint="@color/color_blanco"
        android:textColor="@color/color_blanco"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:background="@color/verdeLima"
        android:padding="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/paddingBottom"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crearorecuperarcontra"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/verdeLimaTextoDos"
        android:id="@+id/textView4"
        android:clickable="true"
        android:onClick="olvidopassword"
        android:layout_marginTop="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Es un conductor nuevo?"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/verdeLimaTextoDos"
        android:id="@+id/textView5"
        android:onClick="olvidopassword"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Registrarse AQUI"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/colorBlanco"
        android:id="@+id/resgirtarme"
        android:onClick="click_resgirtarme"
        android:background="@color/colorCafe"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="37sp"
        android:id="@+id/button"
        android:text="Aceptar"
        android:background="@color/colorCafe"
        android:textColor="@color/color_blanco"
        android:gravity="center"
        android:onClick="login"
        android:textSize="@dimen/size_texto"
        android:layout_below="@+id/contrasena"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10sp"/>

    <ImageView
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo_i5"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicativo Móvil para conductores"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/verdeLimaTexto"
        android:paddingBottom="@dimen/paddingBottom"
        android:textStyle="bold"
        android:layout_above="@+id/correo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>


</RelativeLayout>
