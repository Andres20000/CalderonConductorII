<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeLima"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verdeLima"
        android:orientation="horizontal">


        <Button
            android:id="@+id/numero_orden"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/verdeLima"
            android:gravity="center"
            android:text="CANCELAR SERVICIO"
            android:textColor="#FFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@drawable/post_border_background"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/color_blanco"
            android:editable="false"
            android:padding="5sp"
            android:text="¿Cuál es el motivo de la cancelación del servicio?"
            android:textColor="@color/colorCafe"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/asignarMotivo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linea_borde" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:background="@color/color_gris_linea"/>

        <Button
            android:id="@+id/problemasVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/color_blanco"
            android:editable="false"
            android:gravity="left|center"
            android:onClick="problemasVehiculo"
            android:padding="5sp"
            android:text="Problemas con el vehículo"
            android:textColor="@color/colorCafe"
            android:inputType="textCapSentences"/>


        <TextView
            android:background="@color/colorGrisClaro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linea_borde" />

        <Button
            android:id="@+id/accidente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/color_blanco"
            android:editable="false"
            android:gravity="left|center"
            android:onClick="accidente"
            android:padding="5sp"
            android:text="Tuve un accidente"
            android:textColor="@color/colorCafe"
            android:inputType="textCapSentences"/>

        <TextView
            android:background="@color/colorGrisClaro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linea_borde" />


        <Button
            android:id="@+id/enfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/color_blanco"
            android:editable="false"
            android:gravity="left|center"
            android:onClick="enfermedad"
            android:padding="5sp"
            android:text="Enfermedad"
            android:textColor="@color/colorCafe"
            android:inputType="textCapSentences"/>

        <TextView
            android:background="@color/colorGrisClaro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linea_borde" />

        <Button
            android:id="@+id/otro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_blanco"
            android:editable="false"
            android:gravity="left|center"
            android:onClick="otro"
            android:padding="5sp"
            android:text="Otro"
            android:textColor="@color/colorCafe"
            android:inputType="textCapSentences"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2px"
            android:background="@color/color_gris_linea"/>

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/color_blanco"
            android:hint="Describa brevemente otro motivo de cancelación del servicio"
            android:padding="5sp"
            android:text=""
            android:textColor="@color/colorCafe"
            android:visibility="gone" />

    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="@color/verdeLima"/>


    <Button
        android:id="@+id/enviarcancelacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCafe"
        android:inputType="textCapSentences"
        android:onClick="enviar"
        android:text="Enviar"
        android:textColor="@color/color_blanco" />


</LinearLayout>
